<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_30dp</item>
        <item name="android:layout_marginEnd">@dimen/_30dp</item>
        <item name="android:layout_marginStart">@dimen/_30dp</item>
        <item name="android:background">@drawable/round_boder</item>
        <item name="android:drawablePadding">@dimen/_16dp</item>
        <item name="android:padding">@dimen/_10dp</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textColor">@color/h5E5E5E</item>
    </style>
    <style name="Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40dp</item>
        <item name="android:layout_marginEnd">@dimen/_50dp</item>
        <item name="android:layout_marginStart">@dimen/_50dp</item>
        <item name="android:layout_marginTop">@dimen/_30dp</item>
        <item name="android:background">@drawable/background1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_14sp</item>
    </style>
    <style name="TextTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_20sp</item>
        <item name="android:textColor">@color/h5E5E5E</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textColor">@color/h5E5E5E</item>
    </style>

    <style name="CardViewProfile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_24dp</item>
        <item name="android:layout_marginBottom">@dimen/_2dp</item>
        <item name="cardElevation">@dimen/_2dp</item>
    </style>
    <style name="EdittextUpdateProfile">
        <item name="android:background">@color/hF6F6F6</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40dp</item>
        <item name="paddingStart">@dimen/_10dp</item>
        <item name="android:paddingTop">@dimen/_5dp</item>
        <item name="android:paddingBottom">@dimen/_5dp</item>
        <item name="android:textColor">@color/h5E5E5E</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:layout_marginTop">@dimen/_11dp</item>
        <item name="android:paddingLeft">@dimen/_10dp</item>
    </style>
    <style name="Image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:contentDescription">@string/lbl_image</item>
    </style>
</resources>